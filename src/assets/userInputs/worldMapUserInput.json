{
  "keydown": {
    "ArrowUp": {
      "callback": "player.changeMovement",
      "args": ["front", true]
    },
    "ArrowDown": {
      "callback": "player.changeMovement",
      "args": ["back", true]
    },
    "ArrowRight": {
      "callback": "player.changeMovement",
      "args": ["right", true]
    },
    "ArrowLeft": {
      "callback": "player.changeMovement",
      "args": ["left", true]
    }
  },
  "keyup": {
    "ArrowUp": {
      "callback": "player.changeMovement",
      "args": ["front", false]
    },
    "ArrowDown": {
      "callback": "player.changeMovement",
      "args": ["back", false]
    },
    "ArrowRight": {
      "callback": "player.changeMovement",
      "args": ["right", false]
    },
    "ArrowLeft": {
      "callback": "player.changeMovement",
      "args": ["left", false]
    }
  }
}
